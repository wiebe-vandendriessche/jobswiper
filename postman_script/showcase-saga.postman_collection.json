							"",
							"// Convert comma-separated strings into arrays",
							"const qualificationsList = qualifications_env.split(\",\");",
							"const companiesList = companies_env.split(\",\");",
							"const locationsList = locations_env.split(\",\");",
							"",
							"// Select random values",
							"const randomCompany = pm.environment.get(\"companyName\");",
							"const randomLocation = locationsList[Math.floor(Math.random() * locationsList.length)];",
							"const randomRequirements = getRandomItems(qualificationsList, 3); // Select 3 random qualifications",
							"",
